{
  "name": "notion2all",
  "version": "1.0.0",
  "private": true,
  "description": "A tool to export Notion pages to various formats",
  "main": "dist/index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm link --global",
    "set:config": "ts-node -r tsconfig-paths/register packages/cli/src/index.ts config",
    "dev:backup": "ts-node -r tsconfig-paths/register packages/cli/src/index.ts backup",
    "build": "tsc && tsup cli.ts --format cjs --dts",
    "lint": "pnpm -r lint",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.54.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.14",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1"
  },
  "bin": {
    "notion2all": "./dist/cli.js"
  }
}
