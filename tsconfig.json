{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@notion2all/core": ["packages/core/src"],
      "@notion2all/web": ["packages/web/src"],
      "@notion2all/cli": ["packages/cli/src"],
      "@notion2all/config": ["packages/config/src"],
      "@notion2all/utils": ["packages/utils/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
} 